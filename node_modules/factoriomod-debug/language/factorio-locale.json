  "CONTROL": {
    "prefix": ["__CONTROL__", "CONTROL"],
    "body": "__CONTROL__${1:build}__"
  },
  "CONTROL_MODIFIER": {
    "prefix": ["__CONTROL_MODIFIER__", "CONTROL_MODIFIER"],
    "body": "__CONTROL_MODIFIER__${1:build}__"
