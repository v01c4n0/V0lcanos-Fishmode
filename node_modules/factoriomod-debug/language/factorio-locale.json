    "body": "[item-group=${1:combat}]"
  },
  "special-item": {
    "prefix": ["special-item"],
    "body": "[special-item=${1|blueprint_string,__1__|}]"
  },
  "entity": {
    "prefix": ["entity"],
    "body": "[entity=${1:iron-chest}]"
  },
  "technology": {
    "prefix": ["technology"],
    "body": "[technology=${1:logistics}]"
  },
  "recipe": {
    "prefix": ["recipe"],
    "body": "[recipe=${1:basic-oil-processing}]"
  },
  "fluid": {
    "prefix": ["fluid"],
    "body": "[fluid=${1:water}]"
  },
  "tile": {
    "prefix": ["tile"],
    "body": "[tile=${1:grass-1}]"
  },
  "virtual-signal": {
    "prefix": ["virtual-signal"],
