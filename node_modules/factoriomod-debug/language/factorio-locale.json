    "prefix": ["__ENTITY__", "ENTITY"],
    "body": "__ENTITY__${1:iron-chest}__"
  },
  "ITEM": {
    "prefix": ["__ITEM__", "ITEM"],
    "body": "__ITEM__${1:iron-plate}__"
  },
  "TILE": {
    "prefix": ["__TILE__", "TILE"],
    "body": "__TILE__${1:grass-1}__"
  },
  "FLUID": {
    "prefix": ["__FLUID__", "FLUID"],
    "body": "__FLUID__${1:water}__"
