  "param": {
    "prefix": ["__1__"],
    "body": "__${1:1}__"
  },

  "plural_for_param": {
    "prefix": ["plural","__plural_for_parameter"],
    "body": "__plural_for_parameter_${1:1}_{$0}__"
  },

  "rest": {
    "prefix": ["rest"],
    "body": "rest=$0|"
  },
  "ends in": {
    "prefix": ["ends in"],
    "body": "ends in ${1:1}=$0|"
